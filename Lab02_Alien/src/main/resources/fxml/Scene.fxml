<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="343.0" prefWidth="513.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.alien.FXMLController">
   <top>
      <Label text="Lab 2 - Alien Translator" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Label>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label prefHeight="17.0" prefWidth="75.0" text="Alien Text">
                     <HBox.margin>
                        <Insets bottom="10.0" left="20.0" right="30.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtParola" prefHeight="25.0" prefWidth="259.0">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="30.0" top="10.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btnTraslate" mnemonicParsing="false" onAction="#doTraslate" prefHeight="25.0" prefWidth="82.0" text="Traslate">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="30.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox>
               <children>
                  <TextArea fx:id="txtRisultato" prefHeight="165.0" prefWidth="478.0" promptText="Welcome to Alian Dictionary v2021...">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </HBox.margin>
                  </TextArea>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="lblErrore" prefHeight="17.0" prefWidth="201.0" text="Label">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <Button fx:id="btnClear" mnemonicParsing="false" onAction="#doReset" text="Clear Text">
                     <HBox.margin>
                        <Insets left="200.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
